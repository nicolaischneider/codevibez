{
  "name": "codevibez",
  "displayName": "CodeVibez",
  "description": "MVVM architecture analyzer for SwiftUI projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:swift"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "codevibez.analyzeArchitecture",
      "title": "CodeVibez: Analyze MVVM Architecture",
      "category": "CodeVibez"
    }],
    "menus": {
      "explorer/context": [{
        "command": "codevibez.analyzeArchitecture",
        "when": "resourceExtname == .swift",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
